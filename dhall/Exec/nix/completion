-- vim: filetype=dhall

let script =
        ../completion/scripts.dhall sha256:f177a97cf61d93302fc3c0454b654269d0ad3938e8aaa1c80de74acfa7d8cce4
      ? ../completion/scripts.dhall

let Command =
        ./Command/Type sha256:dc2b111daadb4265396dc562b757f208189242a884e704a4298686ce8984af27
      ? ./Command/Type

let Command/show =
        ./Command/show sha256:802eda931b470db5c62b8c19260b9da1c87f5ea05ef5317ee241d87d9bc05961
      ? ./Command/show

let wrapper =
        ../completion/wrapper sha256:6f4115a040ee81275a40a8785baefbe391cf67cb57e5d4e79a8e0fedf572c036
      ? ../completion/wrapper

in    λ(toolset : Text)
    → λ(command : Command)
    → wrapper
        { toolset = toolset
        , expression = "(${script.url} ${script.hash}).nix"
        , command = Command/show command
        }
