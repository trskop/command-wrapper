let CommandWrapper = ../../CommandWrapper/Types.dhall

in    λ(options : List Text)
    → λ(verbosity : CommandWrapper.Verbosity)
    → λ(colourOutput : CommandWrapper.ColourOutput)
    → λ(arguments : List Text)
    →   { command =
            "buildifier"
        , arguments =
            options # arguments
        , environment =
            [] : List CommandWrapper.EnvironmentVariable
        , searchPath =
            True
        , workingDirectory =
            None Text
        }
      : CommandWrapper.ExecCommand

-- vim: filetype=dhall
