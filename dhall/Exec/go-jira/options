-- vim: filetype=dhall

let CommandWrapper = ../../CommandWrapper/Types.dhall

let commandWrapper = ../../CommandWrapper/package.dhall

in    λ(options : ./Options)
    → λ(verbosity : CommandWrapper.Verbosity)
    →   [ "--endpoint=${options.baseUrl}"
        , "--login=${options.login}"
        , "--user=${options.user}"
        ]
      # commandWrapper.verbosity.fold
        (List Text)
        { Annoying =
            [ "-vvv" ]
        , Normal =
            [] : List Text
        , Silent =
            [ "--quiet" ]
        , Verbose =
            [ "--verbose" ]
        }
        verbosity
