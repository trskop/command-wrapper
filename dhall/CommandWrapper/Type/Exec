let CommandWithEnvironment : Type = ./CommandWithEnvironment

let Verbosity : Type = ./Verbosity

let ColourOutput : Type = ./ColourOutput

let ExecCommand : Type = CommandWithEnvironment
      ⩓ { searchPath : Bool
        , workingDirectory : Optional Text
        }

let NamedCommand : Type =
      { name : Text
      , command :
          ∀ (verbosity : Verbosity)
        → ∀ (colourOutput : ColourOutput)
        → ∀ (arguments : List Text)
        → ExecCommand
      }

in
    { Command = ExecCommand : Type
    , NamedCommand = NamedCommand : Type
    }

-- vim: filetype=dhall
