-- vim: filetype=dhall

let SkelLanguage : Type = <Bash | Dhall | Haskell >

let Editor : Type =
        ../Editor/Type
      ? ../Editor/Type

let SkelTemplate : Type = ./SkelTemplate

let SkelConfig : Type =
      { template : ∀(language : SkelLanguage) → SkelTemplate

      -- Open the newly created file in an editor?
      , editAfterwards : Bool

      , editor : Optional Editor

      , defaultLanguage : Optional SkelLanguage
      }

in  { Language = SkelLanguage
    , Config = SkelConfig
    }
