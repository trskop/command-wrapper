-- vim: filetype=dhall

let from =
      λ(a : Type) →
      λ(default : a) →
      λ(optional : Optional a) →
        merge { None = default, Some = λ(v : a) → v } optional

let test0 = assert : from Natural 0 (None Natural) ≡ 0

let test1 = assert : from Natural 0 (Some 1) ≡ 1

in  from : ∀(a : Type) → a → Optional a → a
