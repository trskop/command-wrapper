-- vim: filetype=dhall

let portToText =
      λ(port : Optional Natural) →
        merge { None = "", Some = λ(p : Natural) → ":${Natural/show p}" } port

let test0 = assert : portToText (None Natural) ≡ ""

let test1 = assert : portToText (Some 8080) ≡ ":8080"

in  portToText : Optional Natural → Text
